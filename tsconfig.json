{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "declaration": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "app": ["app"],
      "config": ["config"],
      "controllers/*": ["controllers/*"],
      "middleware/*": ["middleware/*"],
      "routes/*": ["routes/*"],
      "services/*": ["services/*"],
      "types/*": ["types/*"],
      "utils/*": ["utils/*"]
    }
  },
  "exclude": ["node_modules/*", "dist/*"],
  "include": ["**/*.ts"]
}
